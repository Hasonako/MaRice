# ----- Apps ----- #

# Apps
super + Escape
    rofi -show drun

# Terminal
super + alt + t
    kitty
    
# Browser
super + b
    librewolf

# Reload sxhkd Keybinds
super + shift + Escape
	pkill -USR1 -x sxhkd; dunstify -u low -i ~/.config/bspwm/src/assets/reload.svg 'sxhkd' 'The configuration file has been reloaded successfully!'

# Spotify || Telegram || Discord
super + {s, t, d}
	{spotify, telegram-desktop, discord}

# Manage brightness
XF86MonBrightness{Up,Down}
	sh Brightness {up,down}

# Volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	Volume{ --inc, --dec, --toggle}

# Hide/Show Bar (Polybar and/or eww)
super + alt + {h,u}
	HideBar {-h,-u}

# Change layout
ctrl + z
    ~/.config/change_layout.sh

#Screenshot
Print
    flameshot full -c

super + shift + s
    flameshot gui

# ----- Bspwm ----- #

# BSPWM quit
super + shift + q
    bspc quit

# Kill
super + c
	bspc node -c

# Reload BSPWM
super + alt + r
	bspc wm -r

# Workspace
super + {1-9}
    bspc desktop -f ^{1-9}

# ----- Focus/Swap Nodes ----- #

# Rotate desktop
super + Tab
	bspc node @/ --rotate {90,-90}

# Switch workspace
super + {Left,Right}
	bspc desktop -f {prev,next}

# Send focused Node to workspace directionally
super + ctrl + {Left,Right}
	bspc node -d {prev,next} '--follow'

# Resize window with mouse (hold super + right-click)
super + button3
    bspc node -r

# ----- Expand/Shrink Nodes ----- #

# Focus window in direction
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# Resize tiled windows only
super + alt + {Left,Down,Up,Right}
    bspc node -z {left -20 0,down 0 20,up 0 -20,right 20 0}